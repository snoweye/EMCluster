  entry = "Misc",
  title = "EMCluster: {EM} Algorithm for Model-Based Clustering of Finite Mixture Gaussian Distribution",
  author = personList(as.person("Wei-Chen Chen"),
                      as.person("Ranjan Maitra"),
                      as.person("Volodymyr Melnykov")),
